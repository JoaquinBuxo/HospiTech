// This is the Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hospital {
  id                   Int           @id @default(autoincrement())
  name                 String
  address              String
  email                String
  phone                String
  image                String?
  description          String?
  country              String
  users                User[]
  equipment            Equipment[]
  transactionsMade     Transaction[] @relation("donorHospital")
  transactionsReceived Transaction[] @relation("beneficiaryHospital")
}

model User {
  id               Int      @id @default(autoincrement())
  name             String
  email            String
  password         String
  role             String
  image            String?
  status           String
  hospital         Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId       Int
  registrationDate DateTime
  accountStatus    String
}

model Equipment {
  id           Int           @id @default(autoincrement())
  type         String
  model        String
  condition    String
  description  String
  serialNumber String
  images       String[]
  owner        Hospital      @relation(fields: [ownerId], references: [id])
  ownerId      Int
  lastRevision DateTime?
  repairs      String[]
  Transaction  Transaction[]
}

model Transaction {
  id                    Int       @id @default(autoincrement())
  date                  DateTime
  amount                Float
  paymentMethod         String
  donorHospital         Hospital  @relation("donorHospital", fields: [donorHospitalId], references: [id])
  donorHospitalId       Int
  beneficiaryHospital   Hospital  @relation("beneficiaryHospital", fields: [beneficiaryHospitalId], references: [id])
  beneficiaryHospitalId Int
  status                String?
  equipment             Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId           Int
}
