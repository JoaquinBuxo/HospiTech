// This is the Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hospital {
  id                   String        @id @default(uuid())
  name                 String
  address              String
  email                String        @unique
  phone                String        @unique
  image                String?
  description          String?
  country              String
  users                User[]
  equipment            Equipment[]
  transactionsMade     Transaction[] @relation("donorHospital")
  transactionsReceived Transaction[] @relation("beneficiaryHospital")
}

model User {
  id               String      @id @default(uuid())
  name             String
  email            String
  password         String?
  role             String?
  image            String?
  hospital         Hospital    @relation(fields: [hospitalId], references: [id], onDelete: Cascade)
  hospitalId       String
  registrationDate DateTime    @default(now())
  accountStatus    String?
  Equipment        Equipment[]
}

model Equipment {
  id           String        @id @default(uuid())
  type         String
  model        String
  condition    String
  description  String
  serialNumber String
  images       String[]
  owner        Hospital      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId      String
  createdAt    DateTime      @default(now())
  lastRevision DateTime?
  repairs      String[]
  Transaction  Transaction[]
  createdBy    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
}

model Transaction {
  id                    String    @id @default(uuid())
  date                  DateTime
  amount                Float
  paymentMethod         String
  donorHospital         Hospital  @relation("donorHospital", fields: [donorHospitalId], references: [id])
  donorHospitalId       String
  beneficiaryHospital   Hospital  @relation("beneficiaryHospital", fields: [beneficiaryHospitalId], references: [id])
  beneficiaryHospitalId String
  status                String?
  equipment             Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId           String
}
